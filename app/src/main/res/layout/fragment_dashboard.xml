<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="dashboardFragment"
            type="com.example.trakbucks.Dashboard" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context=".Dashboard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/profile_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:contentDescription="@string/set_your_profile_photo"
                    android:onClick="@{()-> dashboardFragment.navigate()}"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_baseline_person_24" />

                <TextView
                    android:id="@+id/name_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/welcome_back"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toEndOf="@+id/profile_image"
                    android:text="@string/viruj_thakur"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/welcome_back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_toEndOf="@+id/profile_image"
                    android:text="@string/welcome_back" />

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="20dp"
                    android:contentDescription="@string/notifications"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_baseline_notifications_none_24" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardElevation="6sp"
                    app:cardCornerRadius="12sp"
                    android:layout_marginStart="20sp"
                    android:layout_marginEnd="10sp">

                    <RelativeLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16sp">

                        <ProgressBar
                            android:id="@+id/income_progress"
                            android:layout_width="match_parent"
                            android:layout_height="150sp"
                            android:indeterminateOnly="false"
                            android:progressDrawable="@drawable/circle"
                            tools:progress="60"
                            android:progress="60"/>

                        <TextView
                            android:id="@+id/income_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/income_progress"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="10sp"
                            android:gravity="center"
                            android:text="@string/income"
                            android:textSize="17sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="65sp"
                            android:gravity="center"
                            android:text="@string/_20000"
                            android:textSize="20sp" />

                    </RelativeLayout>


                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardElevation="6sp"
                    app:cardCornerRadius="12sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginEnd="20sp">

                    <RelativeLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16sp">

                        <ProgressBar
                            android:id="@+id/expenditure_progress"
                            android:layout_width="match_parent"
                            android:layout_height="150sp"
                            android:indeterminateOnly="false"
                            android:progressDrawable="@drawable/circle"
                            tools:progress="60"
                            android:progress="60"/>

                        <TextView
                            android:id="@+id/expenditure_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/expenditure_progress"
                            android:layout_marginStart="10sp"
                            android:text="@string/expenditure"
                            android:textSize="17sp"
                            android:layout_centerHorizontal="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="65sp"
                            android:layout_marginStart="10sp"
                            android:text="@string/_20000"
                            android:textSize="20sp" />

                    </RelativeLayout>


                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/recent_transactions_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="20sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginEnd="20sp"
                    android:gravity="center"
                    android:text="@string/recent_transactions"
                    android:textSize="20sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/recent_transactions_text"
                    android:layout_marginStart="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginBottom="20sp"
                    android:orientation="vertical">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="6sp"
                        app:cardCornerRadius="12sp"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <com.mikhaellopez.circularimageview.CircularImageView
                                android:id="@+id/profile_image_recent_transaction_1"
                                android:layout_width="40sp"
                                android:layout_height="40sp"
                                android:layout_marginStart="10sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginEnd="10sp"
                                android:layout_marginBottom="10sp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_baseline_person_24" />

                            <TextView
                                android:id="@+id/type_recent_transaction_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginEnd="10sp"
                                android:layout_toEndOf="@id/profile_image_recent_transaction_1"
                                android:text="Recieved From"
                                android:textAlignment="center"
                                android:textSize="17sp" />

                            <TextView
                                android:id="@+id/name_transaction_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/type_recent_transaction_1"
                                android:layout_alignBaseline="@id/profile_image_recent_transaction_1"
                                android:layout_marginStart="5sp"
                                android:layout_marginEnd="10sp"
                                android:layout_marginBottom="10sp"
                                android:layout_toEndOf="@id/profile_image_recent_transaction_1"
                                android:text="Jay Sharma"
                                android:textAlignment="center"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/date_transaction_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/profile_image_recent_transaction_1"
                                android:layout_marginStart="10sp"
                                android:layout_marginTop="5sp"
                                android:layout_marginEnd="10sp"
                                android:layout_marginBottom="10sp"
                                android:text="01 Jun 2022"
                                android:textAlignment="center"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/time_transaction_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBaseline="@id/date_transaction_1"
                                android:layout_alignParentEnd="true"
                                android:layout_marginStart="10sp"
                                android:layout_marginTop="5sp"
                                android:layout_marginEnd="10sp"
                                android:layout_marginBottom="10sp"
                                android:text="09:53 PM"
                                android:textAlignment="center"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/amount_transaction_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginStart="10sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginEnd="10sp"
                                android:layout_marginBottom="10sp"
                                android:text="20000"
                                android:textAlignment="center"
                                android:textSize="17sp" />

                        </RelativeLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="6sp"
                        app:cardCornerRadius="12sp"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <com.mikhaellopez.circularimageview.CircularImageView
                                android:id="@+id/profile_image_recent_transaction_2"
                                android:layout_width="40sp"
                                android:layout_height="40sp"
                                android:layout_marginStart="10sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginEnd="10sp"
                                android:layout_marginBottom="10sp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_baseline_person_24" />

                            <TextView
                                android:id="@+id/type_recent_transaction_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginEnd="10sp"
                                android:layout_toEndOf="@id/profile_image_recent_transaction_2"
                                android:text="Recieved From"
                                android:textAlignment="center"
                                android:textSize="17sp" />

                            <TextView
                                android:id="@+id/name_transaction_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/type_recent_transaction_2"
                                android:layout_alignBaseline="@id/profile_image_recent_transaction_2"
                                android:layout_marginStart="5sp"
                                android:layout_marginEnd="10sp"
                                android:layout_marginBottom="10sp"
                                android:layout_toEndOf="@id/profile_image_recent_transaction_2"
                                android:text="Jay Sharma"
                                android:textAlignment="center"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/date_transaction_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/profile_image_recent_transaction_2"
                                android:layout_marginStart="10sp"
                                android:layout_marginTop="5sp"
                                android:layout_marginEnd="10sp"
                                android:layout_marginBottom="10sp"
                                android:text="01 Jun 2022"
                                android:textAlignment="center"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/time_transaction_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBaseline="@id/date_transaction_2"
                                android:layout_alignParentEnd="true"
                                android:layout_marginStart="10sp"
                                android:layout_marginTop="5sp"
                                android:layout_marginEnd="10sp"
                                android:layout_marginBottom="10sp"
                                android:text="09:53 PM"
                                android:textAlignment="center"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/amount_transaction_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginStart="10sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginEnd="10sp"
                                android:layout_marginBottom="10sp"
                                android:text="20000"
                                android:textAlignment="center"
                                android:textSize="17sp" />

                        </RelativeLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="6sp"
                        app:cardCornerRadius="12sp"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <com.mikhaellopez.circularimageview.CircularImageView
                                android:id="@+id/profile_image_recent_transaction_3"
                                android:layout_width="40sp"
                                android:layout_height="40sp"
                                android:layout_marginStart="10sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginEnd="10sp"
                                android:layout_marginBottom="10sp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_baseline_person_24" />

                            <TextView
                                android:id="@+id/type_recent_transaction_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginEnd="10sp"
                                android:layout_toEndOf="@id/profile_image_recent_transaction_3"
                                android:text="Recieved From"
                                android:textAlignment="center"
                                android:textSize="17sp" />

                            <TextView
                                android:id="@+id/name_transaction_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/type_recent_transaction_3"
                                android:layout_alignBaseline="@id/profile_image_recent_transaction_3"
                                android:layout_marginStart="5sp"
                                android:layout_marginEnd="10sp"
                                android:layout_marginBottom="10sp"
                                android:layout_toEndOf="@id/profile_image_recent_transaction_3"
                                android:text="Jay Sharma"
                                android:textAlignment="center"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/date_transaction_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10sp"
                                android:layout_marginTop="5sp"
                                android:layout_marginEnd="10sp"
                                android:layout_marginBottom="10sp"
                                android:layout_below="@id/profile_image_recent_transaction_3"
                                android:text="01 Jun 2022"
                                android:textAlignment="center"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/time_transaction_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10sp"
                                android:layout_marginTop="5sp"
                                android:layout_marginEnd="10sp"
                                android:layout_marginBottom="10sp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignBaseline="@id/date_transaction_3"
                                android:text="09:53 PM"
                                android:textAlignment="center"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:layout_alignParentEnd="true"
                                android:text="20000"
                                android:layout_margin="10sp"
                                android:textSize="17sp"
                                android:id="@+id/amount_transaction_3"/>

                        </RelativeLayout>

                    </com.google.android.material.card.MaterialCardView>


                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>

    </ScrollView>
</layout>