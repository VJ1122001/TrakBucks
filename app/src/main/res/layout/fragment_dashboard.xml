<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Dashboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp">

            <ImageButton
                android:id="@+id/profile_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:adjustViewBounds="true"
                android:background="@drawable/round_button"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_baseline_person_24"
                android:contentDescription="@string/set_your_profile_photo" />

            <TextView
                android:id="@+id/name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/welcome_back"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@+id/profile_image"
                android:text="@string/viruj_thakur"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/welcome_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"


                android:layout_toEndOf="@+id/profile_image"
                android:text="@string/welcome_back" />

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"

                android:layout_marginBottom="20dp"
                android:adjustViewBounds="true"
                android:background="@drawable/round_button"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_baseline_notifications_none_24"
                android:contentDescription="@string/notifications" />

        </RelativeLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:stretchColumns="*"
            >



                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6sp"
                    app:cardCornerRadius="12sp"
                    android:layout_margin="12sp"
                    >
                    <RelativeLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16sp">

                        <ImageView
                            android:id="@+id/up_image"
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            android:layout_alignParentStart="true"
                            android:src="@drawable/ic_baseline_arrow_upward_24"
                            android:contentDescription="@string/todo" />

                        <TextView
                            android:id="@+id/income_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10sp"
                            android:layout_toEndOf="@id/up_image"
                            android:text="@string/income"
                            android:textSize="20sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/income_text"
                            android:layout_marginStart="10sp"
                            android:layout_marginTop="10sp"
                            android:layout_toEndOf="@id/up_image"
                            android:text="@string/_20000"/>

                    </RelativeLayout>


                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6sp"
                    app:cardCornerRadius="12sp"
                    android:layout_margin="12sp"
                    >
                    <RelativeLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16sp">

                        <ImageView
                            android:id="@+id/down_image"
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            android:layout_alignParentStart="true"
                            android:src="@drawable/ic_baseline_arrow_downward_24"
                            android:contentDescription="@string/todo" />

                        <TextView
                            android:id="@+id/expenditure_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10sp"
                            android:layout_toEndOf="@id/down_image"
                            android:text="@string/expenditure"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/expenditure_text"
                            android:layout_marginStart="10sp"
                            android:layout_marginTop="10sp"
                            android:layout_toEndOf="@id/down_image"
                            android:text="@string/_20000"/>

                    </RelativeLayout>


                </com.google.android.material.card.MaterialCardView>




        </TableLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/recent_transactions"
                android:id="@+id/recent_transactions_text"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_margin="20sp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/recent_transactions_text"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                android:orientation="vertical"
                android:layout_marginBottom="20sp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12sp"
                    app:cardElevation="6sp"
                    android:layout_marginBottom="20sp"
                    android:layout_marginStart="5sp"
                    android:layout_marginEnd="5sp"
                    android:layout_marginTop="5sp">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alignmentMode="alignMargins"
                        android:columnOrderPreserved="true"
                        android:stretchColumns="*">

                        <TableRow tools:ignore="UselessParent">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="80sp"
                                android:layout_columnWeight="1"
                                android:layout_margin="20sp"
                                android:adjustViewBounds="true"
                                android:background="@drawable/round_button"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_baseline_person_24"
                                android:contentDescription="@string/todo" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:layout_margin="20sp"
                                android:text="@string/jay_sharma"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_rowWeight="1"
                                android:layout_columnWeight="1"
                                android:layout_margin="20sp"
                                android:text="@string/_20000"
                                android:textSize="20sp" />

                        </TableRow>


                    </TableLayout>


                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12sp"
                    app:cardElevation="6sp"
                    android:layout_marginBottom="20sp"
                    android:layout_marginStart="5sp"
                    android:layout_marginEnd="5sp">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alignmentMode="alignMargins"
                        android:columnOrderPreserved="true"
                        android:stretchColumns="*">

                        <TableRow tools:ignore="UselessParent">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="80sp"
                                android:layout_columnWeight="1"
                                android:layout_margin="20sp"
                                android:adjustViewBounds="true"
                                android:background="@drawable/round_button"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_baseline_person_24"
                                android:contentDescription="@string/todo" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:layout_margin="20sp"
                                android:text="@string/jay_sharma"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_rowWeight="1"
                                android:layout_columnWeight="1"
                                android:layout_margin="20sp"
                                android:text="@string/_20000"
                                android:textSize="20sp" />

                        </TableRow>


                    </TableLayout>


                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12sp"
                    app:cardElevation="6sp"
                    android:layout_marginBottom="20sp"
                    android:layout_marginStart="5sp"
                    android:layout_marginEnd="5sp">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alignmentMode="alignMargins"
                        android:columnOrderPreserved="true"
                        android:stretchColumns="*">

                        <TableRow tools:ignore="UselessParent">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="80sp"
                                android:layout_columnWeight="1"
                                android:layout_margin="20sp"
                                android:adjustViewBounds="true"
                                android:background="@drawable/round_button"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_baseline_person_24"
                                android:contentDescription="@string/todo" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:layout_margin="20sp"
                                android:text="@string/jay_sharma"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_rowWeight="1"
                                android:layout_columnWeight="1"
                                android:layout_margin="20sp"
                                android:text="@string/_20000"
                                android:textSize="20sp" />

                        </TableRow>


                    </TableLayout>


                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

</ScrollView>